@model ProductViewModel
<div  class="row">
    <div class="mx-4 col-6">
        <a href="#" class="list-group-item list-group-item-action my-1" aria-current="true">
            <div class="d-flex row">
                <div class="col-6">
                    <div class="d-flex w-200 justify-content-between">
                        <h5 class="mb-1"><span class="text-muted">ID: @Model.Id</span> "@Model.Name" </h5>
                    </div>
                    <p class="mb-1">Автор: </p>
                    @if(Model.Discount > 0)
                    {
                        <small class="fw-bold" style="text-decoration: line-through;">@Model.FullPrice</small>
                        <small class="fw-bold">@Model.DiscountedPrice.ToString("N2") руб.</small>
                    }
                    else
                    {
                        <small class="fw-bold">@Model.DiscountedPrice.ToString("N2") руб.</small>
                    }
                    </div>
                    <div class="col mt-4">
                        <p class="text-muted mb-0 fw-bold">Скидка </p>
                        @Model.Discount.ToString("p0")
                    </div>
                    <div class="col mt-4">
                        <p class="text-muted mb-0 fw-bold">Продано </p>
                        @Model.Sold
                    </div>
                </div>
        </a>
    </div>
    <div class="col mt-4">
        <a class="btn btn-warning" asp-controller="Products" asp-action="Edit"
            asp-route-id="@Model.Id">
            <i class="fa-solid fa-pen-to-square"></i>
        </a>
        <a class="btn btn-danger" onclick="deleteItem(@Model.Id)">
            <i class="fa-solid fa-trash"></i>
        </a>
        <a class="btn btn-primary" asp-controller="Products" asp-action="BookInfo" asp-route-itemid="@Model.Id">
            <i class="fa-solid fa-circle-info"></i>
        </a>
    </div>
</div>