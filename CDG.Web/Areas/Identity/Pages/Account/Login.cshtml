@page
@model LoginModel

@{
    ViewData["Title"] = "Войти";
}

<body  style="background-color: #eee;">
<section class="vh-200" class="py-4 mb-4">
  <div class="container-1 h-100">
    <div class="row d-flex justify-content-center align-items-center">
      <div class="col-lg-12 col-xl-12">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-12 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">@ViewData["Title"]</p>

                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="mx-3 mx-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Эл. почта</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                  </div>
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="" />
                        <label asp-for="Input.Password">Пароль</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                  </div>
            <div class="checkbox mb-3">
                <label class="nav-link h6" asp-for="Input.RememberMe" class="form-label">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
            <button id="registerSubmit" type="submit" class="w-50 btn btn-lg btn-success">Войти</button>
                  </div>
            <div>
                <p>
                    <a class="nav-link h6" id="forgot-password" asp-page="./ForgotPassword">Забыли пароль?</a>
                </p>
                <p>
                    <a class="nav-link h6" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Регистрация</a>
                </p>
            </div>
                </form>

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src="~/img/static/login.jpg"
                  class="img-fluid" alt="Sample image">

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
</body>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
